@model List<Pelicula>
@{
    ViewData["Title"] = "Pagina de inicio";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var busqueda = ViewBag.TxtBusqueda ?? "";
    var generoId = ViewBag.GeneroId ?? 0;
}
<div class="flex-row-1">
    <div class="container py-4">
        @* panel de filtros *@
        <div class="row">
            <div class="col">
                <form 
                    asp-controller="Home" 
                    asp-action="Index" 
                    method="get" 
                    class="row g-3 align-items-center"
                >
        
                  
                <div class="row g-3 align-items-center">
                        @*panel de busqueda simple*@ 
                        <div class="col-lg-6">
                            <div class="input-group">
                                <button type="submit" class="btn btn-outline-secondary">Filtrar</button>
                                <input type="text"
                                       name="txtBusqueda"
                                       class="form-control "
                                       placeholder="Buscar peliculas..."
                                       value="@busqueda"
                                       aria-label="Input group" aria-describedby="btnGroup" />
                            </div>

                        </div>
                        @*desplegables*@                        
                        <div class="col-lg-6 d-flex flex-wrap gap-2 justify-content-lg">
                            <div class="dropdown">
                                <select name="generoId"
                                        asp-items="@generoId"
                                        class="form-select btn-outline-secondary"
                                        onchange="this.form.submit()">
                                </select>

                            </div>
                        </div>
                </div>
              
                   
         
                   
                    
                </form>
            </div>
        <div class="row g-3 mb-4 align-items-center">
        @*listado peliculas*@           
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">

                        <a asp-action="Details" asp-route-id="@item.Id">

                       
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="position-relative">
                                <img src="@item.PosterUrlPortada"
                                     class="card-img-top">
                                <div class="card-body p-2">
                                    <h5 class="card-title fs-6 fw-semibold mb-1">@item.Titulo</h5>
                                </div>
                                <div class="d-flex align-items-center text-muted small">
                                    <span class="material-symbols-outlined text-warning me-1" style="font-size:1rem">Star</span>
                                    <span>4.5</span>
                                </div>
                            </div>
                        </div>
                            </a>
                    </div>
                }
            </div>
        </div>

        <nav aria-label="Paginación peliculas">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-txtBusqueda="@busqueda" asp-route-generoId="@generoId">Anterior</a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-txtBusqueda="@busqueda" asp-route-page="@i" asp-route-generoId="@generoId">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-txtBusqueda="@busqueda" asp-route-generoId="@generoId">Siguiente</a>
                </li>
            </ul>
        </nav>
    </div>
    </div>
</div>
