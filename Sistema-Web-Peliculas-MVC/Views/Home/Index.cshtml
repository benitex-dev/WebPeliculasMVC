@model List<Pelicula>
@{
    ViewData["Title"] = "Pagina de inicio";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}
<div class="flex-row-1">
    <div class="container py-4">
        <div class="row g-3 mb-4 align-items-center">
            <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="position-relative">
                                <img src="@item.PosterUrlPortada"
                                     class="card-img-top">
                                <div class="card-body p-2">
                                    <h5 class="card-title fs-6 fw-semibold mb-1">@item.Titulo</h5>
                                </div>
                                <div class="d-flex align-items-center text-muted small">
                                    <span class="material-symbols-outlined text-warning me-1" style="font-size:1rem">Star</span>
                                    <span>4.5</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <nav aria-label="Paginación peliculas">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@(currentPage - 1)">Anterior</a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@(currentPage + 1)">Siguiente</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

