                                        <div class="form-text text-secondary-custom mt-1">Necesaria para confirmar los cambios.</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-white fw-medium">Nueva Contraseña</label>
                                <input class="form-control py-2" placeholder="••••••••" type="password" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-white fw-medium">Confirmar Contraseña</label>
                                <input class="form-control py-2" placeholder="••••••••" type="password" />
                            </div>
                        </div>
                    </div> *@
                    <div class="d-flex flex-column flex-sm-row justify-content-end gap-3 pt-4 mt-5 border-top border-secondary border-opacity-25">
                        <button class="btn btn-outline-light text-white border-secondary fw-bold px-4 py-2 w-100 w-sm-auto" type="button">
                            Cancelar
                        </button>
                        <button class="btn btn-primary fw-bold px-4 py-2 w-100 w-sm-auto" type="submit">
                            Guardar Cambios
                        </button>
                    </div>
                </form>
                @if (ViewBag.Message!=null)
                {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.Message
                    </div>
                }
                
            </div>
        </div>
    </div>
</main>