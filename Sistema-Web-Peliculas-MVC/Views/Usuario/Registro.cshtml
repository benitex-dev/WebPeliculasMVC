@model UsuarioViewModel
@{
}

<div class="position-relative d-flex justify-content-center py-5 px-3">
    <div class="bg-blob"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg rounded-4">
                    <div class="card-body p-4 p-sm-5">
                        <div class="text-center mb-4">
                            <h1 class="h2 fw-bold mb-2">Crear Cuenta</h1>
                            <p class="text-muted small">
                                Regístrate para descubrir y reseñar tus películas favoritas con el poder de la IA.
                            </p>
                        </div>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label class="form-label fw-medium" asp-for="Nombre">Nombre</label>
                                <div class="input-group">
                                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa tu Nombre" />
                                    <span class="input-group-text border-start-0">
                                        <span  asp-validation-for="Nombre" class="material-symbols-outlined fs-5">person</span>
                                    </span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-medium" asp-for="Apellido">Nombre</label>
                                <div class="input-group">
                                    <input asp-for="Apellido" class="form-control" placeholder="Ingresa tu Apellido" />
                                    <span class="input-group-text border-start-0">
                                        <span asp-validation-for="Apellido" class="material-symbols-outlined fs-5">person</span>
                                    </span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-medium" asp-for="Email">Correo electrónico</label>
                                <div class="input-group">
                                    <input class="form-control" asp-for="Email" placeholder="nombre@ejemplo.com"
                                    type="email" />
                                    <span class="input-group-text border-start-0">
                                        <span asp-validation-for="Email" class="material-symbols-outlined fs-5">mail</span>
                                    </span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-medium" asp-for="Password">Contraseña</label>
                                <div class="input-group">
                                    <input class="form-control" asp-for="Password" placeholder="••••••••" type="password" />
                                    <button class="btn btn-reveal btn-outline-secondary border-start-0 toggle-password" type="button">
                                        <span class="material-symbols-outlined fs-5" asp-validation-for="Password">visibility_off</span>
                                    </button>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-medium" asp-for="ConfirmPassword">Confirmar Contraseña</label>
                                <div class="input-group">
                                    <input class="form-control" placeholder="••••••••" required="" type="password" asp-for="ConfirmPassword" />
                                    <button class="btn btn-reveal btn-outline-secondary border-start-0 toggle-password" type="button">
                                        <span class="material-symbols-outlined fs-5" asp-validation-for="ConfirmPassword">visibility_off</span>
                                    </button>
                                </div>
                            </div>
                            
                            <button class="btn btn-primary w-100 rounded-3 shadow mb-4" type="submit">
                                Registrarse
                            </button>
                            
                           
                            <div class="text-center mt-4 d-sm-none">
                                <span class="text-muted small">¿Ya tienes cuenta? </span>
                                <a class="small fw-bold text-decoration-none" href="#">Iniciar Sesión</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
